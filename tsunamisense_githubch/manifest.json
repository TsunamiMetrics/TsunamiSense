
{
  "manifest_version": 2,
  "name": "TsunamiSense",
  "version": "1.0",
  "description": "AI-powered tool for tsunami risk prediction",
  "permissions": ["activeTab"],
  "background": {
    "scripts": ["background/background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content.js"]
    }
  ]
}
